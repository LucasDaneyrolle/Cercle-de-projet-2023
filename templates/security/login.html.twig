{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="px-10 space-y-8 h-screen flex flex-col justify-center">
			<div class="w-16">
				<img class=" h-full" src="images/logo.png"/>
			</div>
			<div>
				<h2 class="text-3xl text-purple-500 mb-2 font-bold">Bienvenue !</h2>
				<h2 class="text-3xl font-bold">Créez votre compte</h2>
			</div>
			<div class="space-y-4">
				<div>
					<label class="block text-purple-700 mb-2 text-xs font-medium" for="inputEmail">Email</label>
					<input class="border-none rounded-full w-full p-3 text-sm text-lavande-500 bg-purple-200 focus:outline-none focus:shadow-outline placeholder-purple-300" placeholder="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div>
					<label class="block text-purple-700 mb-2 text-xs font-medium" for="inputPassword">Mot de passe</label>
					<input class="border-none rounded-full w-full p-3 text-sm text-lavande-500 bg-purple-200 focus:outline-none focus:shadow-outline placeholder-purple-300" placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div>
					<button class="bg-purple-500 py-3 px-8 rounded-full text-base mb-4 w-full text-white" type="submit">
						Se connecter
					</button>
					<p class="text-xs ">Vous avez déjà un compte ?
						<a class="text-purple-500" href="register">Inscrivez-vous</a>
					</p>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
