{% extends 'base.html.twig' %}

{% block title %}Ajouter un évènement{% endblock %}

{% block body %}
    <h1>Nouvel évènement</h1>

    {{ form_errors(eventForm) }}

    {{ form_start(eventForm) }}
        {{ form_row(eventForm.name) }}
        {{ form_row(eventForm.description) }}
        {{ form_row(eventForm.endDate) }}
        {{ form_row(eventForm.startDate) }}
        {{ form_row(eventForm.location) }}

        <button type="submit" class="btn">Ajouter</button>
    {{ form_end(eventForm) }}
{% endblock %}

