				{{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'Prénom', 'class': 'border-none rounded-full w-full p-3 text-sm text-lavande-500 bg-purple-200 focus:outline-none focus:shadow-outline placeholder-purple-300'}}) }}
